
#Generate Background
magick -size 828x1792 gradient:red-'rgb(50,0,0)' background.png
magick -size 1048x2025 xc:none empty.png
#Iterate over files
for file in *.png ; do

#Determine title
	if [[ "$file" =~ "0.png" ]]; then
 		title="Nearby arrivals at a glance\nby day ...      "
     elif [[ "$file" =~ "1.png" ]]; then
         title="... or by night"
 	elif [[ "$file" =~ "2.png" ]]; then
 		title="Easy access to\nnearby bus stops"
 	elif [[ "$file" =~ "3.png" ]]; then
 		title="Detailed information\na tap away"
 	else 
 		continue
	fi;
	name=`echo "$file" | cut -d'.' -f1`
    newname="$name"_framed.png
	echo "Processing $file ..."
 
	magick composite -gravity center "$file" empty.png "$newname"
	magick composite -gravity center red.png "$newname" "$newname"
	magick composite red.png "$newname" "$newname"
	magick "$newname" -resize 75% "$newname"
	magick composite -gravity center -geometry +0+90 "$newname" background.png "$newname"
    convert -size 750x210 xc:none -font Arial -pointsize 50 -fill white -gravity center -annotate +0+0 "$title" caption.png
    magick composite -gravity north caption.png "$newname" "$newname"
    rm caption.png
    mv "$newname" ..
    echo "Generated "$name"_framed.png"

done
rm background.png
rm empty.png

